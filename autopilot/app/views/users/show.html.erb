<%= form_for @entry, url: "/users/#{params[:user_id]}/entries", method: "POST" do |f| %>
  <%= f.text_field :category, {placeholder: "category"} %>
  <%= f.text_field :content, {placeholder: "content"} %>
  <%= f.hidden_field :user_id, value: params[:id] %>
  <%= f.submit "New Entry" %>
<% end %>

<h2>Entries</h2>
<ul class="entries">
  <% @entries.each do |entry| %>
    <li>
    <h5><%= entry.category %></h5>

    <p><%= link_to entry.content, "/users/#{params[:id]}/entries/#{entry.id}" %></p>

    </li>
  <% end %>
</ul>



