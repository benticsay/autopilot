<%= form_for @project, url: "/users/#{params[:user_id]}/projects", method: "POST" do |f| %>
  <%= f.text_field :title, {placeholder: "title"} %>
  <%= f.text_field :logline, {placeholder: "logline"} %>
  <%= f.hidden_field :user_id, value: params[:id] %>
  <%= f.submit "New Project" %>
<% end %>

<h2>Project</h2>
<ul class="projects">
  <% @projects.each do |project| %>
    <li>
      <h4><%= link_to project.title, "/users/#{params[:user_id]}/projects/#{@project.id}", :controller => :projects, :action => :show %></h4>


      <p>
        <%= project.logline %>
      </p>
    </li>
  <% end %>
</ul>
