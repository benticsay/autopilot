<%= form_for @project, url: "/users/#{@user.id}/projects", method: "POST" do |f| %>
  <%= f.text_field :title, {placeholder: "title"} %>
  <%= f.text_field :logline, {placeholder: "logline"} %>
  <%= f.submit "New Project" %>
<% end %>

<h2>Project</h2>
<ul class="projects">
  <% @projects.each do |project| %>
    <li>
      <h4><%= link_to project.title, "/users/#{@user.id}/projects/#{@project.id}" %></h4>
      <p>
        <%= project.logline %>
      </p>
    </li>
  <% end %>
</ul>
